{
  "public": {
    "title": "Life Connect",
    "baseUrl":"https://meteor-on-fhir.meteorapp.com/",
    "theme": {
      "showVideoBackground": false,
      "darkroomTextEnabled": false,
      "defaultVideo": "/VideoBackgrounds/GrayWaves.mp4",
      "backgroundImagePath": "/backgrounds/Gradient.png"      
    },
    "home": {
      "showUnderConstruction": false,
      "showExperimental": false,
      "showApps": false,      
      "showFhirMenu": false,
      "showRegistration": true
    },
    "defaults": {
      "route": "/hello-world",
      "requireAuthorization": true,      
      "avatars": true,
      "barcodes": true,
      "hexgridMenu": false,
      "nfcOrbital": false,
      "notificationMenu": true,
      "searchbarVisible": true,
      "displayNavbars": true,
      "disableHeader": false,
      "disableFooter": false,
      "darkroom": false,
      "iFrameEnabled": false,
      "iFrameUrl": "https://www.wikipedia.org/",
      "paginationLimit": 100,
      "subscriptionLimit": 1000,
      "cards": {
        "height": "auto",
        "opacity": 0.95
      },
      "registration": {
        "displayAccessCode": true
      },
      "sidebar": {
        "hidden": [
          "/allergies",
          "/conditions",
          "/care-plans",
          "/goals",
          "/devices",
          "/medications",
          "/medication-orders",
          "/medication-statements",
          "/organizations",
          "/observations",
          "/patients",
          "/practitioners",
          "/procedures",
          "/risk-assessments"
        ]
      }
    },
    "interfaces": {
      "default": {
        "status": "inactive",
        "channel": {
          "endpoint": "http://localhost:80"
        },
        "auth": {
          "username": "foo",
          "password": "bar"
        }
      }
    },
    "meshNetwork": {
      "upstreamSync": "http://meteor-on-fhir.meteorapp.com/fhir-3.0.0", 
      "autosync": false
    },
    "modules": {
      "data": true,
      "forum": true,
      "genome": true,
      "healthlog": true,
      "dermatograms": true,
      "telemedicine": true,
      "inbound": true,
      "outbound": true,
      "epic": true,
      "statisticsLogging": true,
      "apps": {
        "ChecklistManifesto": false,
        "ContinuityOfCare": false,
        "Videoconferencing": false        
      },
      "fhir": {
        "AllergyIntolerances": true,
        "AuditEvents": true,
        "BodySites": true,
        "CarePlans": true,
        "Conditions": true,
        "Devices": true,
        "DiagnosticReports": true,
        "Goals": true,
        "ImagingStudies": true,
        "Immunizations": true,
        "Locations": true,
        "Lists": true,
        "Medications": true,
        "MedicationOrders": true,
        "MedicationStatements": true,
        "Organizations": true,
        "Observations": true,
        "Patients": true,
        "Practitioners": true,
        "Procedures": true,
        "Questionnaires": true,
        "RiskAssessments": true
      }
    }
  },
  "private": {
    "practitionerAccessCode": "hippocrates",
    "sysadminAccessCode": "rootaccess",
    "disableOauth": true,
    "demo": {
      "nightlyDatabaseDrop": true
    }
  },
  "galaxy.meteor.com": {
    "env": {
      "MONGO_URL": "mongodb://username:password@server.mlab.com:25389/database",
      "NODE_ENV": "prod",
      "DEBUG": 1,
      "TRACE": 1,
      "Practitioners": 1
    }
  }  
}
