{
  "public": {
    "title": "Meteor on FHIR",
    "theme": {
      "showVideoBackground": false,
      "darkroomTextEnabled": false,
      "defaultVideo": "/VideoBackgrounds/GrayWaves.mp4",
      "backgroundImagePath": "/backgrounds/Gradient.png"      
    },
    "home": {
      "showUnderConstruction": true,
      "showExperimental": false,
      "showApps": true,      
      "showFhirMenu": true
    },
    "defaults": {
      "avatars": true,
      "barcodes": true,
      "hexgridMenu": false,
      "nfcOrbital": false,
      "notificationMenu": true,
      "searchbarVisible": true,
      "displayNavbars": true,
      "disableHeader": false,
      "disableFooter": false,
      "darkroom": false,
      "iFrameEnabled": false,
      "iFrameUrl": "https://www.wikipedia.org/",
      "paginationLimit": 100,
      "subscriptionLimit": 1000,
      "cards": {
        "height": "auto",
        "opacity": 0.95
      },
      "sidebar": {
        "hidden": [
          "/allergies",
          "/conditions",
          "/care-plans",
          "/goals",
          "/devices",
          "/medications",
          "/medication-orders",
          "/organizations",
          "/observations",
          "/patients",
          "/practitioners",
          "/procedures",
          "/risk-assessments"
        ]
      }      
