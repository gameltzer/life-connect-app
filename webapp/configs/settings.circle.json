{
  "public": {
    "title": "Meteor on FHIR",
    "theme": {
      "showVideoBackground": false,
      "darkroomTextEnabled": false,
      "defaultVideo": "/VideoBackgrounds/Circulation.mp4",
      "backgroundImagePath": "/backgrounds/Gradient.png"     
    },
    "home": {
      "showUnderConstruction": false,
      "showExperimental": false,
      "showApps": false,      
      "showFhirMenu": true,
      "showRegistration": true
    },
    "defaults": {
      "route": "/",
      "requireAuthorization": true,
      "avatars": true,
      "barcodes": true,
      "hexgridMenu": false,
      "nfcOrbital": false,
      "notificationMenu": false,
      "searchbarVisible": true,
      "displayNavbars": true,
      "disableHeader": false,
      "disableFooter": false,
      "darkroom": false,
      "iFrameEnabled": false,
      "iFrameUrl": "https://www.wikipedia.org",
      "paginationLimit": 100,
      "subscriptionLimit": 1000,
      "cards": {
        "height": "auto",
        "opacity": 0.95
      },
      "registration": {
        "displayAccessCode": true
      },
      "sidebar": {
        "hidden": [
          "/allergies",
          "/conditions",
          "/care-plans",
          "/goals",
          "/devices",
          "/medications",
          "/medication-orders",
          "/medication-statements",
          "/organizations",
          "/observations",
          "/patients",
          "/practitioners",
          "/procedures",
          "/risk-assessments"
        ]
      }
    },
    "interfaces": {
      "default": {
        "status": "inactive",
        "channel": {
          "endpoint": "http://localhost:80"
        }
      }
    },
    "modules": {
      "data": true,
      "forum": true,
      "genome": true,
      "healthlog": true,
      "dermatograms": true,
      "telemedicine": true,
      "inbound": true,
      "outbound": true,
      "epic": true,
      "statisticsLogging": true,
      "apps": {
        "ChecklistManifesto": false,
        "ContinuityOfCare": false,
        "Videoconferencing": false        
      },
      "fhir": {
        "AllergyIntolerances": true,
        "AuditEvents": true,
        "BodySites": true,
        "CarePlans": true,
        "Conditions": true,
        "Devices": true,
        "DiagnosticReports": true,
        "Goals": true,
        "ImagingStudies": false,
        "Immunizations": true,
        "Locations": true,
        "Lists": true,
        "Medications": true,
        "MedicationOrders": true,
        "MedicationStatements": true,
        "Organizations": true,
        "Observations": true,
        "Patients": true,
        "Practitioners": true,
        "Procedures": true,
        "Questionnaires": true,
        "RiskAssessments": true
      }
    }
  },
  "private": {
    "practitionerAccessCode": "hippocrates",
    "sysadminAccessCode": "rootaccess",
    "disableOauth": true
  }
}